@model IEnumerable<DiagnosticCenterManagement.Data.Models.Admin>

@{
    ViewBag.Title = "Index";
}

<h1 style="text-align:center">Admin</h1>
<hr />
<h2>Admin Actions</h2>

<ul>
    <li>@Html.ActionLink("Add New Admin", "Create")</li>
    <li>@Html.ActionLink("Manage Doctors", "ManageDoctors")</li>
    <li>@Html.ActionLink("Manage Patients", "ManagePatients")</li>
</ul>

<h2>Admins List</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td style="text-align:right">
                @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |
                @Html.ActionLink("Details", "Details", new { id = item.UserId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.UserId })
            </td>
        </tr>
    }

</table>
<br />


